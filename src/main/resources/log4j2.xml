<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="log-file">${log-path}/hippodrome.log</Property>
        <Property name="log-pattern">${log-path}/hippodrome.%d{yyyy-MM-dd}.log</Property>
    </Properties>

    <Appenders>
        <RollingFile name="RollingFile"
                     fileName="${log-file}"
                     filePattern="${log-pattern}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %c{1} - %m%n"/>
            <Policies>
                <!-- ежедневный ролловер -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy>
                <!-- удаление файлов старше 7 дней -->
                <Delete basePath="${log-path}">
                    <IfFileName glob="hippodrome.*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>